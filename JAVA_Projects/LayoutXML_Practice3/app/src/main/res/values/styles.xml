<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textStyle_bold" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textStyle_normal" parent="@android:style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textColorOrange">
        <item name="android:textColor">@color/colorTextOrange</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textColorTeal">
        <item name="android:textColor">@color/colorTextTeal</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textColorGreen">
        <item name="android:textColor">@color/colorTextGreen</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="radioButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="frameStyle_port">
        <item name="android:layout_width">@dimen/port_square_width</item>
        <item name="android:layout_height">@dimen/port_square_height</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/colorMinty</item>
    </style>

    <style name="frameStyle_land">
        <item name="android:layout_width">@dimen/land_square_width</item>
        <item name="android:layout_height">@dimen/land_square_height</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/colorMinty</item>
    </style>

    <style name="textViewFrameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="imageViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="textViewTextTitlesStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginStart">@dimen/from_start</item>
    </style>

    <style name="editTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/enter_text</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textColorHighlight">@color/colorAccent</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="checkBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/from_start</item>
        <item name="android:checked">false</item>
        <item name="android:text">(Bold)</item>
    </style>

</resources>
