<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fullsail.caseyscott.scottcasey_ce02.MainActivity"
    android:weightSum="1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/bears_logohdpi"
            android:contentDescription="@string/image"
            android:scaleType="centerCrop"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/introduction"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorLightSteelBlue"
                android:background="@color/colorMidBlue"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/colorOrange"
                android:text="@string/intro_fill"
                android:background="@color/colorLightSteelBlue"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/summary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorLightSteelBlue"
                android:background="@color/colorMidBlue"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/colorOrange"
                android:text="@string/summary_fill"
                android:background="@color/colorLightSteelBlue"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/conclusion"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorLightSteelBlue"
                android:background="@color/colorMidBlue"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/colorOrange"
                android:text="@string/conclusion_fill"
                android:background="@color/colorLightSteelBlue"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
