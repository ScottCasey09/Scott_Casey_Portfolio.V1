<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/teacher_frag">


    <TextView
        style="@style/title_textView_Bold"
        android:id="@+id/formTitle"
        android:text="@string/add_a_instructor"
        />

    <EditText
        style="@style/editText_general"
        android:id="@+id/editText_line1"
        android:hint="@string/first_name"/>

    <EditText
        style="@style/editText_general"
        android:id="@+id/editText_line2"
        android:hint="@string/last_name"/>

    <EditText
        style="@style/editText_general"
        android:id="@+id/editText_line3"
        android:hint="@string/course"/>

    <Button
        style="@style/button_add_style"
        android:text="@string/add_instructor"
        android:id="@+id/addButton"/>

</LinearLayout>